<%= simple_form_for(@menu_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :menu %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :image %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
